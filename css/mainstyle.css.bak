
*{
	margin: 0; padding: 0;box-sizing: border-box;
	font-family: 'Josefin Sans', sans-serif;
}
 header{
		width:100vw;
		height:100vh;
		background-image: url('../ladakh background image.jpg');
		background-position: bottom;
		background-size: cover;
		display: flex;
		align-items: center;
		justify-content: center;
 }
header h1{
	 width: 100%; height: 5vh;
	 background: rgba(0,0,0,0.2);
	 color: white; display: flex; justify-content: space-between;
	 align-items: center;  font-size:6vmin;
 }
header h2{
	 width: 100%; height: 5vh;
	 background: rgba(0,0,0,0.2);
	 color:white; display: flex; justify-content: space-between;
	 align-items: center; font-size:4vmin;
 }	 
hr {
	width: 350px;
	height: 4px;
	background:crimson;
	margin: 10px auto;
	border-radius: 1px;
}
section {
	width: 20%;
	margin: 70px auto;
}
title {
	text-align: center;
	font-size: 5vmin;
}